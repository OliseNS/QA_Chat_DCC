# Healthcare AI Assistant Environment Variables

# OpenRouter API Key (required for LLM access)
OPENROUTER_API_KEY=your_openrouter_api_key_here

# Model settings
LLM_MODEL=google/gemma-3-27b-it:free

# Data directories
DOCS_DIR=docs
DATA_DIR=data
EMBEDDINGS_DIR=data/embeddings/faiss

# Flask settings
SECRET_KEY=your-secret-key-here
FLASK_DEBUG=False
HOST=127.0.0.1
PORT=5000

# Logging settings
LOG_LEVEL=INFO

# Upload settings
UPLOAD_FOLDER=uploads
MAX_CONTENT_LENGTH=16777216

# RAG settings
CHUNK_SIZE=200
OVERLAP_SIZE=50
TOP_K_RESULTS=4
SIMILARITY_THRESHOLD=0.15