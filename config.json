{
    "app_info": {
        "title": "Dialysis Care Center Assistant",
        "description": "Hi! I'm Alex, your friendly guide to dialysis care and treatment options. Ask me anything!",
        "version": "1.0.0",
        "developer": {
            "name": "Olisemeka Nmarkwe",
            "title": "AI and ML Developer",
            "contact": "olisemeka.dev"
        }
    },
    "tech_stack": {
        "ai_ml": {
            "embedding_model": "all-MiniLM-L6-v2",
            "vector_db": "FAISS",
            "llm_api": "OpenRouter (Gemma-3)",
            "architecture": "RAG (Retrieval-Augmented Generation)"
        },
        "backend": {
            "language": "Python 3.10+",
            "data_processing": ["NumPy", "Pandas"],
            "web_scraping": ["Requests", "BeautifulSoup4"],
            "ml_libraries": ["Sentence Transformers", "Transformers", "PyTorch"]
        },
        "frontend": {
            "framework": "Streamlit",
            "features": ["Real-time Chat", "Context Visualization", "Interactive Settings", "Session Management"]
        },
        "data_pipeline": {
            "scraping": "DCC Website Content",
            "processing": "Text Chunking & Embeddings",
            "storage": ["JSON Configuration", "FAISS Index", "Text Chunks"]
        }
    },
    "sample_questions": [
        "What types of dialysis treatment does DCC offer?",
        "I'm new to dialysis - what should I expect?",
        "Can I do dialysis at home? What are my options?",
        "How do I contact DCC for more information?",
        "Tell me about DCC's mission and values",
        "What's the difference between hemodialysis and peritoneal dialysis?",
        "How often will I need treatments?",
        "What should I bring to my first appointment?"
